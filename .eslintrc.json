{
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "jest"
  ],
  "env": {
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-restricted-syntax": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "import/no-extraneous-dependencies": "off",
    "max-len": [
      "error",
      140
    ],
    "indent": [
      "error",
      2
    ],
    "import/no-unresolved": "off",
    "no-underscore-dangle": "off",
    "no-console": "off"
  }
}
